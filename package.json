{
    "name": "sql-manifold-9",
    "displayName": "Syntax highlighting for Manifold 9 SQL",
    "description": "Provides SQL syntax highlighting for Manifold System 9",
    "version": "0.1.0",
    "publisher": "rkolka",
    "license": "MIT",
    "repository": { 
        "type": "git",
        "url": "https://github.com/rkolka/sql-manifold-9"
    },
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "sql9",
            "aliases": ["Manifold 9 SQL"],
            "extensions": [".sql"],
            "configuration": "./language-configuration.json",
            "firstLine": "--\\s*\\$manifold\\$"

        }],
        "snippets": [
            {
                "language": "sql9",
                "path": "./snippets/sql9.code-snippets"
            }
        ],
        "grammars": [{
            "language": "sql9",
            "scopeName": "source.sql9",
            "path": "./syntaxes/sql9.tmLanguage.json"
        }]
    },
    "scripts": {
        "build": "vsce package -o dist/sql9.vsix",
        "package": "vsce package -o dist/sql9.vsix",
        "deploy:local": "code --install-extension dist/sql9.vsix --force"
        
      }
}